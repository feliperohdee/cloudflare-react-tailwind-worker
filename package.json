{
	"name": "cloudflare-react-tailwind-server",
	"type": "module",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"cf-typegen": "wrangler types",
		"deploy": "wrangler deploy",
		"dev": "concurrently --names \"WRANGLER,TAILWIND\" --prefix-colors \"blue.bold,green.bold\" \"yarn dev:wrangler\" \"yarn dev:tailwind\"",
		"dev:tailwind": "yarn tailwindcss -i ./src/style.css -o ./public/style.css --watch",
		"dev:wrangler": "wrangler dev --live-reload",
		"lint": "prettier --write . && eslint .",
		"start": "wrangler dev",
		"test": "vitest"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.7.5",
		"@cloudflare/workers-types": "^4.20250311.0",
		"@eslint/js": "^9.22.0",
		"@tailwindcss/cli": "^4.0.13",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"concurrently": "^9.1.2",
		"eslint": "^9.22.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.19",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"tailwindcss": "^4.0.13",
		"typescript": "^5.5.2",
		"typescript-eslint": "^8.26.1",
		"vitest": "~3.0.7",
		"wrangler": "^3.114.1"
	},
	"dependencies": {
		"@hono/react-renderer": "^0.3.0",
		"@types/node": "^22.13.10",
		"hono": "^4.7.4",
		"lucide-react": "^0.479.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	}
}
